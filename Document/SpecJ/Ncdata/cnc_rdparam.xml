#include "fwlib32.h"

void example( void )
{
    ODBSYS info ;
    IODBPSD param ;
    short ret, idx, axno ;
    cnc_sysinfo( &#38;info ) ;
    axno = atoi( info.axes ) ;
    ret = cnc_rdparam( h, 1020, -1, 4+1*MAX_AXIS, &#38;param ) ;
    for ( idx = 0 ; idx &#60; axno ; idx++ ) {
